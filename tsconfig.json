{
	"compilerOptions": {
		"target": "ES2020",
		"moduleResolution": "node",
		"module": "commonjs",
		"rootDir": "src",
		"outDir": "./dist",
		"typeRoots": ["./src/@types", "./node_modules/@types"],
		"removeComments": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true
	}
}
